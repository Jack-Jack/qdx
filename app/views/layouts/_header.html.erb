<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "北京广电设备网", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path %></li>
          <% if user_signed_in? %>
            <li><%= current_user.email%></li> 
            <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
          <% elsif admin_signed_in? %>
            <li><%= current_admin.email%></li>
            <li><%= link_to "Sign Out", destroy_admin_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "User sign up", new_user_registration_path %></li>
            <li><%= link_to "User sign in", new_user_session_path %></li>
            <li><%= link_to "Admin sign up", new_admin_registration_path %></li> 
            <li><%= link_to "Admin sign in", new_admin_session_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
